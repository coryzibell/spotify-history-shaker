{
  // This is an alias to @tsconfig/node16: https://github.com/tsconfig/bases
  "extends": "@tsconfig/node-lts-strictest-esm/tsconfig.json",

  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "target": "esnext",
  },

  "include": [
    "src/**/*"
  ]
}
